# Unix
alias cat="ccat"
alias cp="cp -iv"
alias df="df -h"
alias du="du -cksh"
alias e="$EDITOR"
alias help="run-help"
alias ll="ls -al"
alias ln="ln -v"
alias ls="ls -FGh"
alias mkdir="mkdir -p"
alias mv="mv -iv"
alias rm="rm -i"
alias v="env TERM=wezterm nvim"
alias n="env TERM=wezterm nvim"
alias calc="genius"
alias fzf="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"

# Bundler
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Reload ZSH
alias z="exec zsh"

# Dev Tools
alias i="irb"
alias p="pry"
alias prettyjson="python -m json.tool"
alias ru="rubocop"
alias wuzz="$GOPATH/bin/wuzz"

# Weather and the moon, man
alias moon="curl wttr.in/Moon"
alias weather="curl http://v2\.wttr\.in/los_angeles"

# Ruby and Rails
alias be="bundle exec"
alias ber="bundle exec rspec"
alias irb='irb --readline -r irb/completion'
alias migrate="bundle exec rails db:migrate db:rollback && bundle exec rails db:migrate db:test:prepare"
alias racer="ruby -r tracer"
alias rake="RUBYOPT='-W0' rake"
alias ras="bundle exec rails s"
alias rc="rails console"
alias ruby="ruby -w"
alias schema_fixup="rails db:drop db:create db:schema:load && rails db:migrate"

alias taild="tail -f log/development.log"
alias tailt="tail -f log/test.log"
alias reds="redis-server"

# Python
alias pipvenv="python -m pip"
alias pvenv="python -m venv .venv"
alias apvenv="source .venv/bin/activate"
alias runserver="python manage.py runserver"
alias pmigrate="python manage.py migrate"

# JavaScript
alias yi="yarn install --ignore-engines"
alias yb="yarn build-local"
alias yw="yarn watch"
alias yu="curl --compressed -o- -L https://yarnpkg.com/install.sh | bash"

# Use modern regexps for sed, i.e. "(one|two)", not "\(one\|two\)"
alias sed="sed -E"

# Copy-pasting
alias \‚ùØ=''

# Git
alias ap="git add --all"
alias add="git add"
alias aa="git add --patch"
alias branch="git branch -vv"
alias branches="git branches"
alias browse="git browse"
alias c="git commit"
alias can="git commit --amend --no-edit"
alias cv="git commit -v"
alias clone="git clone"
alias cm="git commit -m"
alias co="git checkout"
alias del="git branch -D"
alias diff="git diff"
alias fall="git fetch --all"
alias gcon="git rebase --continue"
alias git="hub"
alias gpr="hub pull-request"
alias mg="git merge"
alias mup="git checkout master && git pull && git checkout -"
alias dup="git checkout development && git pull && git checkout -"
alias pf="git push --force-with-lease"
alias ph="git push -u origin HEAD"
alias pull="git pull"
alias push="git push"
alias reb="git rebase -i --signoff -"
alias rename="git branch -m"
alias st="git status"
alias stu="git stash -u"
alias stou="git stou"
alias uncommit="git reset --soft HEAD^"
alias unstage="git reset"

# docker
alias build_db="art --on markops-stage docker-compose run app rails db:setup"
alias drama="art --on markops-stage docker-compose run app"
alias ddown="docker-compose down --remove-orphans"
alias dstop="docker-compose stop"
alias dbuild="art --on markops-stage docker-compose build --pull"
alias dce="docker-compose exec"
alias ddup="art --on markops-stage docker-compose up"
alias dpry="art --on markops-stage docker-compose run --rm --service-ports app"
alias dprune="docker system prune --volumes -a"
alias es_index_create="art --on markops-stage docker-compose run --rm app bundle exec rails index:create"
alias es_index_refresh="art --on markops-stage docker-compose run --rm app bundle exec rails index:refresh"

# art
alias sshprod="art --on markops-prod kube-exec heroes-web"

# random
alias tl="tmux list-sessions"

alias dot="cd $HOME/dotfiles"

alias work="cd $HOME/work/"

alias wifi-ip="ipconfig getifaddr en0"

alias update="$HOME/dotfiles/bin/update_packages"

alias install_rust="curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh"

alias intel="arch -x86_64 /bin/zsh"

alias clone_website="wget --mirror --convert-links --adjust-extension --page-requisites --no-parent"

alias icloud="cd $HOME/Library/Mobile\ Documents/com~apple~CloudDocs/"
