[alias]
  aa = add --patch
  ap = add --all
  branch = branch -vv
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  c = commit
  can = commit --amend --no-edit
  cm = commit -m
  co = checkout
  cv = commit -v
  delete = branch -D
  dup = !git checkout develop && git pull && git checkout -
  empty = commit --allow-empty -m "[rebuild]"
  fall = fetch --all
  gcon = git rebase --continue
  glog = log -E -i --grep
  l = log --pretty=colored
  mg = merge
  mup = !git checkout main && git pull && git checkout -
  pf = push --force-with-lease
  ph = push -u origin HEAD
  pr = hub pull-request
  reb = rebase -i -
  rename = branch -m
  rl = log --walk-reflogs --date=iso
  sha = rev-parse --short HEAD
  sla = log --oneline --decorate --graph --all
  st = status
  stu = stash -u
  stou = "!f() { \
    git stash; \
    git stash -u; \
    git stash pop stash@{1}; \
  }; f"
  uncommit = reset --soft HEAD^
  unstage = reset
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
[color]
  ui = always
[color "diff"]
  colorMoved = default
[commit]
  template = ~/.gitmessage
  gpgsign = true
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  ignorecase = false
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta "delta-theme"]
  syntax-theme = TwoDark
[delta]
  navigate = true
  light = false
  side-by-side = true
  line-numbers = true
  features = delta-theme
[diff]
  colorMoved = zebra
  compactionHeuristic = true
[fetch]
  prune = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[github]
  user = devinrm
[help]
  autocorrect = 1
[hub]
  protocol = ssh
[init]
  defaultBranch = main
[merge]
  ff = only
  conflictstyle = diff3
[pull]
  rebase = true
[push]
  default = simple
[rebase]
  autosquash = true
[rerere]
  enabled = true
