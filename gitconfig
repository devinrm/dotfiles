[alias]
  ap = add --all
  aa = add --patch
  branch = branch -vv
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  c = commit
  can = commit --amend --no-edit
  cv = commit -v
  cm = commit -m
  co = checkout
  dt = difftool --no-symlinks --dir-diff
  empty = commit --allow-empty -m "[rebuild]"
  fall = fetch --all
  gcon = git rebase --continue
  glog = log -E -i --grep
  l = log --pretty=colored
  mg = merge
  tup = !git checkout trunk && git pull && git checkout -
  pf = push --force-with-lease
  ph = push -u origin HEAD
  pr = hub pull-request
  reb = rebase -i -
  rename = branch -m
  rl = log --walk-reflogs --date=iso
  sha = rev-parse --short HEAD
  sla = log --oneline --decorate --graph --all
  st = status
  stu = stash -u
  uncommit = reset --soft HEAD^
  unstage = reset
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
  delete = branch -D
[color]
  ui = always
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[color "diff-highlight"]
  newHighlight = "green bold 22"
  newNormal = "green bold"
  oldHighlight = "red bold 52"
  oldNormal = red bold
[commit]
  template = ~/.gitmessage
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
  ignorecase = false
  pager = git-split-diffs
[diff]
  colorMoved = zebra
  compactionHeuristic = true
[difftool]
  prompt = false
  trustExitCode = true
[fetch]
  prune = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[github]
  user = devinrm
[help]
  autocorrect = 1
[hub]
  protocol = ssh
[init]
  templatedir = ~/.git_template
  defaultBranch = main
[merge]
  ff = only
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
  coloredwithrefs = format:%Cred%h%Creset %Cblue%d%Creset %s %Cgreen(%cr)%C(bold blue)%an%Creset
[pull]
  rebase = true
[push]
  default = simple
[rebase]
  autosquash = true
[rerere]
  enabled = true
[split-diffs]
  theme-name = arctic
[user]
  name = Devin Morgenstern
  email = devin.morgenstern@protonmail.com
